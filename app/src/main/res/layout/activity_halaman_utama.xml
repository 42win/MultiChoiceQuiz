<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanUtamaActivity">

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonLogo"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_1"
        android:id="@+id/btn_tips"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView3"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_2"
        android:id="@+id/btn_simulasi"
        android:layout_below="@+id/btn_tips"
        android:layout_alignLeft="@+id/btn_tips"
        android:layout_alignStart="@+id/btn_tips" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_3"
        android:id="@+id/btn_tentang"
        android:layout_below="@+id/btn_simulasi"
        android:layout_alignLeft="@+id/btn_tips"
        android:layout_alignStart="@+id/btn_tips" />



</RelativeLayout>